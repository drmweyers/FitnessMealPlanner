          }
        ]
      ]
    },
    "Valid Data?": {
      "main": [
        [
          {
            "node": "Create/Update Contact in CRM",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Create/Update Contact in CRM": {
      "main": [
        [
          {
            "node": "Send Lead Magnet Email",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Send Lead Magnet Email": {
      "main": [
        [
          {
            "node": "Track Lead Magnet Requested",
            "type": "main",
            "index": 0
          },
          {
            "node": "Track Lead Magnet Sent",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1",
    "saveManualExecutions": true,
    "callerPolicy": "workflowsFromSameOwner",
    "errorWorkflow": ""
  },
  "staticData": null,
